{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "actor_resource_definition.1.8.0.json",
    "title": "Actor Resource Definition",
    "description": "An actor resource definition.",
    "type": "object",
    "properties": {
        "format_version": {
            "type": "string",
            "const": "1.8.0"
        },
        "minecraft:client_entity": {
            "$ref": "#/definitions/actor_resource_definition"
        },
        "minecraft:attachable": {
            "$ref": "#/definitions/actor_resource_definition"
        }
    },
    "definitions": {
        "actor_resource_definition": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "type": "string"
                        },
                        "min_engine_version": {
                            "$ref": "meta.json#/definitions/version_string"
                        },
                        "materials": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "textures": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "geometry": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "spawn_egg": {
                            "type": "object",
                            "properties": {
                                "texture": {
                                    "type": "string"
                                },
                                "base_color": {
                                    "type": "string"
                                },
                                "overlay_color": {
                                    "type": "string"
                                },
                                "texture_index": {
                                    "type": "integer"
                                }
                            }
                        },
                        "scripts": {
                            "type": "object",
                            "properties": {
                                "pre_animation": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "meta.json#/definitions/molang"
                                    }
                                },
                                "scale": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "scalex": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "scaleX": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "scaley": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "scaleY": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "scalez": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "scaleZ": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "parent_setup": {
                                    "$ref": "meta.json#/definitions/molang"
                                }
                            }
                        },
                        "particle_effects": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "particle_emitters": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "animations": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "animation_controllers": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        },
                        "render_controllers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "sound_effects": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "enable_attachables": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "identifier",
                        "geometry"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "description"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "format_version"
    ],
    "additionalProperties": false
}
