{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "render_controller.json",
    "title": "Render Controller",
    "type": "object",
    "properties": {
        "format_version": {
            "type": "string",
            "const": "1.8.0"
        },
        "render_controllers": {
            "type": "object",
            "propertyNames": {
                "pattern": "^controller\\.render\\."
            },
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "rebuild_animation_matrices": {
                        "type": "boolean"
                    },
                    "arrays": {
                        "type": "object",
                        "properties": {
                            "geometries": {
                                "type": "object",
                                "propertyNames": {
                                    "pattern": "^[aA][rR][rR][aA][yY]\\."
                                },
                                "additionalProperties": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "materials": {
                                "type": "object",
                                "propertyNames": {
                                    "pattern": "^[aA][rR][rR][aA][yY]\\."
                                },
                                "additionalProperties": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "textures": {
                                "type": "object",
                                "propertyNames": {
                                    "pattern": "^[aA][rR][rR][aA][yY]\\."
                                },
                                "additionalProperties": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "required": [],
                        "additionalProperties": false
                    },
                    "geometry": {
                        "type": "string"
                    },
                    "part_visibility": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "propertyNames": {
                                "pattern": "[a-zA-Z0-9_.:*]+"
                            },
                            "additionalProperties": {
                                "$ref": "meta.json#/definitions/molang"
                            }
                        }
                    },
                    "materials": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "propertyNames": {
                                "pattern": "[a-zA-Z0-9_.:*]+"
                            },
                            "additionalProperties": {
                                "$ref": "meta.json#/definitions/molang"
                            }
                        }
                    },
                    "textures": {
                        "type": "array",
                        "items": {
                            "$ref": "meta.json#/definitions/molang"
                        }
                    },
                    "color": {
                        "type": "object",
                        "properties": {
                            "r": {
                                "$ref": "meta.json#/definitions/molang"
                            },
                            "g": {
                                "$ref": "meta.json#/definitions/molang"
                            },
                            "b": {
                                "$ref": "meta.json#/definitions/molang"
                            },
                            "a": {
                                "$ref": "meta.json#/definitions/molang"
                            }
                        },
                        "required": [],
                        "additionalProperties": false
                    },
                    "overlay_color": {
                        "type": "object",
                        "properties": {
                            "r": {
                                "$ref": "meta.json#/definitions/molang"
                            },
                            "g": {
                                "$ref": "meta.json#/definitions/molang"
                            },
                            "b": {
                                "$ref": "meta.json#/definitions/molang"
                            },
                            "a": {
                                "$ref": "meta.json#/definitions/molang"
                            }
                        },
                        "required": [],
                        "additionalProperties": false
                    },
                    "uv_anim": {
                        "type": "object",
                        "properties": {
                            "offset": {
                                "type": "array",
                                "minItems": 2,
                                "maxItems": 2,
                                "items": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "additionalItems": false
                            },
                            "scale": {
                                "type": "array",
                                "minItems": 2,
                                "maxItems": 2,
                                "items": {
                                    "$ref": "meta.json#/definitions/molang"
                                },
                                "additionalItems": false
                            }
                        },
                        "required": [
                            "offset",
                            "scale"
                        ],
                        "additionalProperties": false
                    },
                    "light_color_multiplier": {
                        "$ref": "meta.json#/definitions/molang"
                    },
                    "ignore_lighting": {
                        "type": "boolean"
                    },
                    "filter_lighting": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "geometry"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "format_version",
        "render_controllers"
    ],
    "additionalProperties": false
}